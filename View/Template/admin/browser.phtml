	  </button>
	  <ul class="dropdown-menu">
		 <li><a href="<?php echo $this->url('Reviews:Admin:Review@addAction'); ?>"><i class="glyphicon glyphicon-file"></i> <?php $this->show('Add new review'); ?></a></li>
