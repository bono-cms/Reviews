<?php

use Krystal\Form\Element;

?>

<form data-group="review">

	<div class="well clearfix">
        <?php echo Element::hidden('review[id]', $review->getId()); ?>
        
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Name'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
                    <?php echo Element::text('review[name]', $review->getName(), array('class' => 'form-control', 'placeholder' => $this->translate('Name of the person who left this message'))); ?>
					<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Email'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
                    <?php echo Element::text('review[email]', $review->getEmail(), array('class' => 'form-control', 'placeholder' => $this->translate('Email of the person who left this message'))); ?>
					<span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
				</div>
			</div>
		</div>
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Date'); ?></label>
			<div class="col-lg-10">
				<div class="input-group">
                    <?php echo Element::text('review[date]', date($dateFormat, $review->getTimestamp()), array('class' => 'form-control', 'placeholder' => $this->translate('Date of the publication'))); ?>
					<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
				</div>
			</div>
		</div>
        
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Content'); ?></label>
			<div class="col-lg-10">
                <?php echo Element::textarea('review[review]', $review->getReview()); ?>
			</div>
		</div>
		
		<div class="form-group clearfix">
			<label class="col-lg-2 control-label"><?php $this->show('Published'); ?></label>
			<div class="col-lg-10">
                <?php echo Element::checkbox('review[published]', $review->getPublished(), array('class' => 'form-control')); ?>
			</div>
		</div>
	</div>
	
	<?php if ($review->getId()):?>
	
	<button data-button="save" data-url="<?php echo $this->url('Reviews:Admin:Edit@updateAction'); ?>" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Save'); ?></button>
	<button data-button="save-create" data-back-url="<?php echo $this->url('Reviews:Admin:Add@indexAction'); ?>" data-url="<?php echo $this->url('Reviews:Admin:Edit@updateAction'); ?>" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Save & Create new'); ?></button>
	
	<?php else: ?>
	
	<button data-button="add" data-back-url="<?php echo $this->url('Reviews:Admin:Edit@indexAction', null); ?>" data-url="<?php echo $this->url('Reviews:Admin:Add@addAction'); ?>" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> <?php echo $this->translate('Add'); ?></button>
	<button data-button="add-create" data-url="<?php echo $this->url('Reviews:Admin:Add@addAction'); ?>" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> <?php echo $this->translate('Add & Create new'); ?></button>
	
	<?php endif; ?>
	
	<button data-button="cancel" data-url="<?php echo $this->url('Reviews:Admin:Browser@indexAction'); ?>" class="btn btn-default"><i class="glyphicon glyphicon-floppy-remove"></i> <?php $this->show('Cancel'); ?></button>
</form>
